{
  "compilerOptions": {
    "module": "NodeNext", // Choose the appropriate module system for your project
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "outDir": "./dist",
    "target": "ES2020",
    "lib": ["es2020", "DOM"]
  },
  "include": ["src/**/*.ts"], // Include the source files you want to compile
